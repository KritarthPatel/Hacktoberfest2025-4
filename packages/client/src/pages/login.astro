              ‚Üê Back to Home
            </a>
          </div>
        </div>
      </div>
    </div>

    <script>
      async function checkAuthStatus() {
        const authStatusElement = document.querySelector('[data-auth-status]') as HTMLElement;
        const loginSection = document.getElementById('login-section') as HTMLElement;
        const userSection = document.getElementById('user-section') as HTMLElement;
        const userAvatar = document.getElementById('user-avatar') as HTMLImageElement;
        const userName = document.getElementById('user-name') as HTMLElement;
        const userUsername = document.getElementById('user-username') as HTMLElement;
        const API_BASE =
          import.meta.env.MODE == 'development' ? 'http://localhost:4000' : ''

        try {
          const res = await fetch(API_BASE + '/api/auth/me', {
            credentials: 'include',
          })

          if (res.ok) {
            const data = await res.json()
            if (data.authenticated && data.user) {
              // User is logged in
              if (loginSection) loginSection.classList.add('hidden')
              if (userSection) userSection.classList.remove('hidden')

              if (userAvatar) {
                userAvatar.src = data.user.photos?.[0]?.value || data.user.avatar_url || ''
              }
              if (userName) {
                userName.textContent = data.user.displayName || data.user.name || 'GitHub User'
              }
              if (userUsername) {
                userUsername.textContent = '@' + (data.user.username || data.user.login || '')
              }

              if (authStatusElement && window.updateAuthStatus) {
                window.updateAuthStatus(authStatusElement, 'success');
              }
            } else {
              // Not authenticated
              if (authStatusElement && window.updateAuthStatus) {
                window.updateAuthStatus(authStatusElement, 'pending');
              }
            }
          } else {
            // Not authenticated
            if (authStatusElement && window.updateAuthStatus) {
              window.updateAuthStatus(authStatusElement, 'pending');
            }
          }
        } catch (err) {
          console.warn('Auth check failed:', err)
          if (authStatusElement && window.updateAuthStatus) {
            window.updateAuthStatus(authStatusElement, 'error');
          }
        }
      }

      // Check auth status on page load
      checkAuthStatus()

      // Check for auth success in URL params
      const urlParams = new URLSearchParams(window.location.search)
      if (urlParams.get('auth') === 'success') {
        setTimeout(checkAuthStatus, 100) // Small delay to allow session to be set
      }
    </script>
  </body>
</html>
